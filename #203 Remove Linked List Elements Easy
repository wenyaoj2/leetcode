class Solution {
    public ListNode removeElements(ListNode head, int val) {
        ListNode header = new ListNode(-1);
        header.next = head;
        ListNode cur = header.next;
        ListNode pre = header;
        
        while(cur!=null){
            while(cur.val==val&&cur.next!=null){
                cur = cur.next;
            }
            if(cur.next==null&&cur.val==val){
                pre.next = null;
                return header.next;
            }
            else{
                pre.next = cur;
                pre = cur;
                cur = cur.next;
            }
        }
        return header.next;
    }
}
