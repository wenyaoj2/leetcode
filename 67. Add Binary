class Solution {
    public String addBinary(String a, String b) {
        String ans = "";
        int lengtha = a.length()-1;
        int lengthb = b.length()-1;
        int carry = 0;
        int sum = 0;
        while(lengtha>=0||lengthb>=0){
            sum = 0;
            if(lengtha>=0){
                sum = sum+ a.charAt(lengtha)-'0';
            }
            if(lengthb>=0){
                sum = sum+ b.charAt(lengthb)-'0';
            }
            lengtha--;
            lengthb--;
            sum += carry;
            carry = sum/2;
            sum = sum%2;
            ans=String.valueOf(sum)+ans;
            
        }
        if(carry==1){
            ans = String.valueOf(carry)+ans;
        }
        return ans;
    }
}
