class Solution {
    public boolean isPowerOfTwo(int n) {
        if(n==1){
            return true;
        }
        if(n==0){
            return false;
        }
        int tail = 0;
        while(n!=1){
            tail = n%2;
            if(tail!=0){
                return false;
            }
            n = n/2;
        }
        return true;
    }
}
