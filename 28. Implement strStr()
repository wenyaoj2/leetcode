class Solution {
    public int strStr(String haystack, String needle) {
        if(needle.length()==0){
            return 0;
        }
        int j = 0;
        int point = 0;
        for(int i = 0; i<haystack.length();i++){
            j = 0;
            if(haystack.charAt(i)==needle.charAt(j)){
                point = i;
                while(j<needle.length()&&i<haystack.length()&&haystack.charAt(i)==needle.charAt(j)){
                    i++;
                    j++;
                }
                i = point;
            }
            if(j==needle.length()){
                return point;
            }
            
        }
        return -1;
    }
}
