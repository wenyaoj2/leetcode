class Solution {
    public int findLHS(int[] nums) {
        Map<Integer,Integer> ans = new HashMap();
        for(int i:nums){
            ans.put(i,ans.getOrDefault(i,0)+1);
        }
        int sum = 0;
        for(int i : ans.keySet()){
            if(ans.containsKey(i+1)){
                sum = Math.max(ans.get(i)+ans.get(i+1),sum);
            }
            if(ans.containsKey(i-1)){
                sum = Math.max(ans.get(i)+ans.get(i-1),sum);
            }
        }
        return sum;
    }
}
