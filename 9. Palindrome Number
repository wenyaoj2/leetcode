class Solution {
    public boolean isPalindrome(int x) {
        String ans = String.valueOf(x);
        int len = ans.length()-1;
        for(int i = 0; i<ans.length();i++){
            if(ans.charAt(i)!=ans.charAt(len)){
                return false;
            }
            len--;
        }
        return true;
    }
}

method 2
class Solution {
    public boolean isPalindrome(int x) {
        if(x<0){
            return false;
        }
        int num = x;
        int tail = 0;
        int result = 0;
        while(x!=0){
            tail = x%10  ;
            result = result*10+tail;
            x = x/10;
        }
        if(result!=num){
            return false;
        }
        return true;
    }
}
